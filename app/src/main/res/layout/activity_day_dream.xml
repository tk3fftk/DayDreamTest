<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical" >
    <Switch
        android:id="@+id/setInteractive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/setInteractive"
        android:textOff="false"
        android:textOn="true"
        tools:targetApi="14" />
    <Switch
        android:id="@+id/setFullscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/setFullscreen"
        android:textOff="false"
        android:textOn="true"
        tools:targetApi="14" />
    <Switch
        android:id="@+id/setScreenBright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/setScreenBright"
        android:textOff="false"
        android:textOn="true"
        tools:targetApi="14" />
</LinearLayout>